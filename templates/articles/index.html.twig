{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1 class="text-center">Liste des articles</h1>
    <a class="btn btn-outline-primary" href={{path('ajouter_articles')}}>Ajouter</a>

    <table class="table mt-3">
        <thead>
            <th>#ID</th>
            <th>Libelle</th>
            <th>Disponibilité</th>
            <th>Prix</th>
            <th>Marque</th>
            <th>Categories</th>
            <th>Actions</th>
        </thead>
        <body>
            {% for article in articles %}
                <tr>
                    <td>#{{article.id}}</td>
                    <td><a href="{{path('afficher_article', {id: article.id })}}">{{article.libelle}}</a></td>
                    <td>{{article.isDisponible}}</td>
                    <td>{{article.price}}</td>
                    <td>{{article.marque}}</td>
                    <td>{{ article.categorie.nomCategorie ?? 'Pas de categorie' }}</td>
                    <td>
                        <a class="btn btn-warning" href={{path('modifier_articles', {id: article.id })}}>Edit</a>
                        <a class="btn btn-danger" href={{path('supprimer_articles', {id: article.id })}}>Delete</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="text-center">Aucun Données</td>
                </tr>
            {% endfor %}
        </body>
    </table>
</div>
{% endblock %}
